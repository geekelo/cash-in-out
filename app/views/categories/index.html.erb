<h2>Categories</h2>
<ul>
<% @categories.each do |category| %>
  <li class="tablebody">
  <%= link_to category.name, category_path(category),  class: 'publicRecipeName' %>
  Total Amount: <%= @total_amounts[category.id] %>
  <%=  category.icon %>
 
  <%= link_to 'Edit', edit_category_path(category), class: ['tablecol', 'navlink', 'actbtn', 'edit'] %>
  <%= button_to 'Delete', category_path(category), method: :delete, class: ['tablecol', 'navlink', 'actbtn', 'del'] , data: { confirm: 'Are you sure?' } %>
  </li>
  </ul>
  <% end %>

<%= link_to 'Add New Category', new_category_path, class: ['navlink', 'actbtn'] %>
